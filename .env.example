# ===============================================
# REQUIRED: Authentication and Database
# ===============================================

# Better Auth secret key (generate with: openssl rand -hex 32)
BETTER_AUTH_SECRET=

# PostgreSQL connection string (Neon or Vercel Postgres)
DATABASE_URL=

# IMPORTANT FOR VERCEL: Set this to your production URL
# Without this, OAuth metadata discovery will fail with "failed to discover OAuth metadata"
# Examples:
# - https://mcp-betterauth-nextjs.vercel.app
# - https://your-custom-domain.com
AUTH_URL=

# ===============================================
# REQUIRED: Microsoft OAuth (Primary Auth)
# ===============================================
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=common

# ===============================================
# OPTIONAL: OAuth Providers for MCP Tools
# ===============================================

# HubSpot OAuth
HUBSPOT_CLIENT_ID=
HUBSPOT_CLIENT_SECRET=

# PandaDoc OAuth
PANDADOC_CLIENT_ID=
PANDADOC_CLIENT_SECRET=

# Xero OAuth
XERO_CLIENT_ID=
XERO_CLIENT_SECRET=

# ===============================================
# OPTIONAL: System API Keys (Alternative to OAuth)
# ===============================================
ANTHROPIC_API_KEY=
SENDGRID_API_KEY=
SLACK_API_KEY=
HUBSPOT_API_KEY=
PANDADOC_API_KEY=
XERO_API_KEY=

# ===============================================
# OPTIONAL: OAuth Hub Configuration
# ===============================================

# OAuth hub URL for centralized callback handling (for preview deployments)
# Example: https://mcp-betterauth-hub.vercel.app
AUTH_HUB_URL=

# Secret for JWT state verification in OAuth flows (generate with: openssl rand -hex 32)
# REQUIRED if using AUTH_HUB_URL
STATE_SECRET=

# Comma-separated list of allowed redirect domains for OAuth callbacks
# Example: .vercel.app,your-domain.com
ALLOWED_REDIRECT_DOMAINS=

# ===============================================
# OPTIONAL: Additional Services
# ===============================================

# Redis for SSE session resumability
REDIS_URL=

# Sentry error tracking
SENTRY_AUTH_TOKEN=
NEXT_PUBLIC_SENTRY_DSN=

# ===============================================
# DEVELOPMENT ONLY
# ===============================================

# Enable no-auth mode for testing (NEVER use in production)
NO_AUTH=false

# Local development URL override
LOCAL_URL=http://localhost:3000

# Allowed CORS origins (comma-separated)
# Default: Development allows all localhost origins
# Production: Set explicitly, e.g.: https://your-domain.com,https://another-domain.com
ALLOWED_ORIGINS=